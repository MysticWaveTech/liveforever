    <script>
        function showSubsystem() {
            document.getElementById('subsystemContainer').style.display = 'block';
        }

        function revealFullSystem() {
            document.getElementById('fullSystem').style.display = 'block';
            document.getElementById('phiMax').style.display = 'block';
        }

        function revealHiddenPart() {
            document.getElementById('hiddenPart').style.display = 'block';
        }

        function activateRadionics() {
            document.getElementById('radionicsMsg').style.display = 'block';
            setTimeout(() => {
                document.getElementById('radionicsMsg').style.display = 'none';
            }, 3000); // Hide message after 3 seconds
        }

        function broadcastAudio() {
            let audio = new Audio('your-audio-file.mp3');
            audio.play();
        }

        function broadcastVideo() {
            let video = document.getElementById('videoPlayer');
            video.src = 'your-video-file.mp4';
            video.style.display = 'block';
            video.play();
        }

        function broadcastSupernatural() {
            let audio = new Audio('your-supernatural-audio.mp3');
            audio.play();
            let video = document.getElementById('supernaturalVideoPlayer');
            video.src = 'your-supernatural-video.mp4';
            video.style.display = 'block';
            video.play();
        }

        function handleImageUpload(event) {
            let file = event.target.files[0];
            let reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('uploadedImage').src = e.target.result;
                document.getElementById('uploadedImage').style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    </script>
